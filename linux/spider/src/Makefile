.PHONY: OUTPUT CLEAN
CC=gcc
TARGET=spider
INCLUDE_PATH=../include
LIBRARY_NAME_1=g
LIBRARY_NAME_2=pthread
LIBRARY_NAME_3=lssl
LIBRARY_NAME_4=lcrypto
LIBRARY_NAME=-l$(LIBRARY_NAME_1) -$(LIBRARY_NAME_3) -$(LIBRARY_NAME_4)
CLFAGS=-I$(INCLUDE_PATH) -Wall -c
LDFLAGS=$(LIBRARY_NAME)
SRCFIFENAME=$(wildcard *.c)
DESFIFENAME=$(patsubst %.c,%.o,$(SRCFIFENAME))

$(TARGET):$(DESFIFENAME)
	$(CC) $^ $(LDFLAGS) -o $@
%.o:%.c
	$(CC) $(CLFAGS) $(LDFLAGS) $<

OUTPUT:
	@echo $(SRCFIFENAME)
	@echo $(DESFIFENAME)
CLEAN:
	rm $(DESFIFENAME) $(TARGET)
